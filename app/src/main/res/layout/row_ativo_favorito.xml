<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:background="#fffafaff"
    android:orientation="vertical">

    <!--Início primeira linha-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textAtivo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:width="260dp"
            android:textStyle="bold"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imgUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/oscilacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="370px"
            android:textColor="#ffc8c832"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fffafaff"
            android:text="R$"
            android:textColor="#ff8eff0c"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textValorRealPrimeiraLinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fffafaff"
            android:textColor="#ff8eff0c"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--Fim primeira linha-->


    <!--Início segunda linha-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelMedio"
            android:text="Médio R$ "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fechaAnt"
            android:layout_toRightOf="@id/labelMedio"
            android:textSize="18sp"
            android:text="R$ 999,00"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelMin"
            android:layout_toRightOf="@id/fechaAnt"
            android:text="Min R$ "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/minima"
            android:layout_toRightOf="@id/labelMin"
            android:textSize="18sp"
            android:text="R$ 999,00"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelAbertura"
            android:text="Abert. R$ "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/abertura"
            android:layout_toRightOf="@id/labelAbertura"
            android:textSize="18sp"
            android:text="R$ 999,00"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelMax"
            android:layout_toRightOf="@id/abertura"
            android:text="Máx. R$ "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/labelMax"
            android:id="@+id/maxima"
            android:textSize="18sp"
            android:text="R$ 999,00"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--Fim segunda linha-->

    <!--Início terceira linha-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade compra: "
            android:textStyle="bold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/dataAtua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textQtdeCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textVlrCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>
    <!--Fim terceira linha-->

</LinearLayout>