                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.main.AcoesActivity"
            android:label="@string/title_activity_acoes" >
        </activity>

        <activity
            android:name=".view.main.AtivosFavoritos"
            android:label="@string/title_activity_favoritos" >
        </activity>

        <activity
            android:name=".view.main.ConfiguracaoActivity"
            android:label="@string/title_activity_configuracao" >
        </activity>

        <activity
            android:name = ".view.main.EdicaoAtivoActivity"
