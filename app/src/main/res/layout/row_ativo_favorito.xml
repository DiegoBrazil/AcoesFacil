<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffafaff">

    <!--Início primeira linha-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textAtivo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textStyle="bold"
            android:width="200px"
            />

        <ImageView
            android:id="@+id/imgUp"
            android:src="@drawable/ic_up"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textValor1PrimeiraLinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2,77"
            android:textSize="8dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#ffc8c832"
            android:width="450px"
            />

        <TextView
            android:text="R$"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:textColor="#ff8eff0c"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:background="#fffafaff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textValorRealPrimeiraLinha"
            android:text="9,98"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:textColor="#ff8eff0c"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:background="#fffafaff"
            android:textStyle="bold" />

    </LinearLayout>
    <!--Fim primeira linha-->


    <!--Início segunda linha-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Fechamento e abertura-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Fech. Ant: R$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />

                <TextView
                    android:text="9,99"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/abc_text_size_body_1_material"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Abertura: R$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />

                <TextView
                    android:text="9,99"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/abc_text_size_body_1_material"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />
            </LinearLayout>
        </LinearLayout>

        <!--Máxima e mínima-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Máxima: R$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />

                <TextView
                    android:text="9,98"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Mínima: R$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />

                <TextView
                    android:text="9,54"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_button_padding_horizontal_material" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--Fim segunda linha-->


    <!--Início terceira linha-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Atualizado em: "
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textQtdeCompra"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textVlrCompra"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!--Fim terceira linha-->

</LinearLayout>